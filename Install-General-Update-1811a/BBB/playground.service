[Unit]
Description=Nonlinear-Labs Playground
After=syslog.target network.target systemd-modules-load.service install-update-from-usb.service
Wants=install-update-from-usb.service

[Service]
ExecStart=/nonlinear/playground/playground --bbbb=192.168.8.2
ExecStop=-/nonlinear/scripts/soled-exit-PG-message.sh
Restart=on-failure
RestartSec=1
RestartPreventExitStatus=SIGKILL
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
